{
  "propertyPage": {
    "controls": [
      {
        "type": "combo",
        "label": "Customer type",
        "property": "type",
        "required": true,
        "sortByLabel": true
      },
      {
        "type": "group",
        "name": "Corporate",
        "controls": [
          {
            "type": "text",
            "label": "Company name",
            "required": true,
            "property": "companyName",
            "conditions": {
              "requirement": {
                "type": "CORPORATE"
              }
            }
          },
          {
            "type": "text",
            "label": "VAT Identification Number",
            "property": "vatIdentificationNumber",
            "required": true,
            "pattern": "[0-9]{3}-[0-9]{2}-[0-9]{2}-[0-9]{3}",
            "customValidation": {
              "function": "isValidNIP",
              "message": "VAT Identification Number is invalid"
            },
            "conditions": {
              "requirement": {
                "type": "CORPORATE"
              }
            }
          }
        ],
        "conditions": {
          "visibility": {
            "type": "CORPORATE"
          }
        }
      },
      {
        "type": "group",
        "name": "Retail",
        "controls": [
          {
            "type": "columns",
            "controls": [
              {
                "type": "text",
                "label": "First name",
                "property": "firstName",
                "required": true,
                "conditions": {
                  "requirement": {
                    "type": "RETAIL"
                  }
                }
              },
              {
                "type": "text",
                "label": "Last name",
                "property": "lastName",
                "required": true,
                "conditions": {
                  "requirement": {
                    "type": "RETAIL"
                  }
                }
              }
            ]
          }
        ],
        "conditions": {
          "visibility": {
            "type": "RETAIL"
          }
        }
      },
      {
        "type": "text",
        "label": "Phone number",
        "property": "phoneNumber",
        "pattern": "\\+48 \\d{9}"
      },
      {
        "type": "email",
        "label": "Email",
        "property": "email",
        "maxLength": 150
      },
      {
        "type": "label",
        "expression": "'Customer address'"
      },
      {
        "type": "text",
        "label": "Street",
        "property": "address.street",
        "required": true
      },
      {
        "type": "columns",
        "controls": [
          {
            "type": "text",
            "label": "Zip code",
            "property": "address.zipCode",
            "required": true,
            "pattern": "[0-9]{2}-[0-9]{3}"
          },
          {
            "type": "text",
            "label": "Place",
            "property": "address.place",
            "required": true
          }
        ]
      }
    ]
  }
}