{
  "propertyPage": {
    "size": "extra-large",
    "controls": [
      {
        "type": "columns",
        "controls": [
          {
            "type": "combo",
            "label": "Seller",
            "property": "seller",
            "objectType": "Customer",
            "required": true
          },
          {
            "type": "combo",
            "label": "Buyer",
            "property": "buyer",
            "objectType": "Customer",
            "required": true
          }
        ]
      },
      {
        "type": "date",
        "label": "Issue date",
        "property": "issueDate",
        "required": true
      },
      {
        "type": "date",
        "label": "Service date",
        "property": "serviceDate",
        "required": true
      },
      {
        "type": "tabs",
        "label": "Positions",
        "tabs": [
          {
            "name": "Position",
            "controls": [
              {
                "type": "text",
                "label": "Name",
                "property": "positions[0].objectName",
                "required": true
              },
              {
                "type": "columns",
                "controls": [
                  {
                    "type": "number",
                    "label": "Amount",
                    "property": "positions[0].amount",
                    "min": 0,
                    "max": 10000,
                    "step": 0.001,
                    "required": true
                  },
                  {
                    "type": "combo",
                    "label": "Unit",
                    "property": "positions[0].unit",
                    "values": {
                      "PIECE": "szt.",
                      "HOUR": "godz."
                    },
                    "required": true
                  }
                ]
              },
              {
                "type": "money",
                "currency": "PLN",
                "label": "Unit price",
                "property": "positions[0].unitPrice",
                "required": true
              },
              {
                "type": "number",
                "label": "Discount",
                "property": "positions[0].discount",
                "min": 0,
                "step": 0.01,
                "required": true
              },
              {
                "type": "combo",
                "label": "VAT Rate",
                "property": "positions[0].vatRate",
                "values": {
                  "VAT_23": "23%",
                  "VAT_08": "8%",
                  "VAT_05": "5%",
                  "VAT_00": "0%"
                },
                "required": true
              }
            ]
          }
        ]
      },
      {
        "type": "textarea",
        "label": "Comments",
        "property": "comments"
      }
    ]
  }
}