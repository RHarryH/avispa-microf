{
  "propertyPage": {
    "controls": [
      {
        "type": "label",
        "expression": "'Properties of ' + $value('objectName') + ' invoice'"
      },
      {
        "type": "separator"
      },
      {
        "type": "date",
        "label": "Invoice date",
        "property": "invoiceDate"
      },
      {
        "type": "date",
        "label": "Service date",
        "property": "serviceDate"
      },
      {
        "type": "columns",
        "controls": [
          {
            "type": "combo",
            "label": "Seller",
            "property": "seller"
          },
          {
            "type": "combo",
            "label": "Buyer",
            "property": "buyer"
          }
        ]
      },
      {
        "type": "tabs",
        "label": "Positions",
        "tabs": [
          {
            "name": "Position",
            "controls": [
              {
                "type": "text",
                "label": "Name",
                "property": "positions[0].objectName"
              },
              {
                "type": "columns",
                "controls": [
                  {
                    "type": "text",
                    "label": "Amount",
                    "property": "positions[0].amount"
                  },
                  {
                    "type": "combo",
                    "label": "Unit",
                    "property": "positions[0].unit"
                  }
                ]
              },
              {
                "type": "money",
                "currency": "PLN",
                "label": "Unit price",
                "property": "positions[0].unitPrice"
              },
              {
                "type": "text",
                "label": "Discount",
                "property": "positions[0].discount"
              },
              {
                "type": "radio",
                "label": "VAT Rate",
                "property": "positions[0].vatRate"
              }
            ]
          }
        ]
      },
      {
        "type": "textarea",
        "label": "Comments",
        "property": "comments"
      },
      {
        "type": "text",
        "label": "Creation date",
        "property": "creationDate"
      },
      {
        "type": "text",
        "label": "Modification date",
        "property": "modificationDate"
      }
    ]
  }
}