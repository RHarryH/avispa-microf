{
  "$schema": "https://json-schema.org/draft/2019-09/schema",
  "additionalProperties": false,
  "description": "Schema for menu item configuration",
  "type": "array",
  "items": {
    "type": "object",
    "additionalProperties": false,
    "properties": {
      "label": {
        "type": "string",
        "minLength": 1
      },
      "action": {
        "type": "string",
        "minLength": 1
      },
      "items": {
        "$ref": "menu-items.json#"
      }
    },
    "required": ["label"]
  }
}