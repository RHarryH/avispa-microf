{
  "$schema": "https://json-schema.org/draft/2019-09/schema",
  "additionalProperties": false,
  "description": "Schema for list widget configuration",
  "type": "object",
  "properties": {
    "listWidget": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "name": {
          "type": "string",
          "minLength": 1
        },
        "type": {
          "type": "string",
          "minLength": 1
        },
        "caption": {
          "type": "string",
          "minLength": 1
        },
        "emptyMessage": {
          "type": "string",
          "minLength": 1
        },
        "properties": {
          "type": "array",
          "items": {
            "type": "string",
            "pattern": "^[a-zA-Z](?:[a-zA-Z\\d.]*[a-zA-Z\\d])?+$"
          },
          "minItems": 1
        },
        "itemsPerPage": {
          "type": "integer",
          "minimum": 0,
          "maximum": 25,
          "default": 10
        }
      },
      "required": [
        "name",
        "type",
        "caption",
        "emptyMessage",
        "properties"
      ]
    }
  },
  "required": [
    "listWidget"
  ]
}