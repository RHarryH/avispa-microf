{
  "$schema": "https://json-schema.org/draft/2019-09/schema",
  "additionalProperties": false,
  "description": "Schema for menu configuration",
  "type": "object",
  "properties": {
    "menu": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "name": {
          "type": "string",
          "minLength": 1
        },
        "items": {
          "$ref": "menu-items.json#"
        }
      },
      "required": [
        "name"
      ]
    }
  },
  "required": [
    "menu"
  ]
}