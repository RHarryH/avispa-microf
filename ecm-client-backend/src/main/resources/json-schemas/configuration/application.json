{
  "$schema": "https://json-schema.org/draft/2019-09/schema",
  "additionalProperties": false,
  "description": "Schema for application configuration",
  "type": "object",
  "properties": {
    "application": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string",
          "minLength": 1
        },
        "fullName": {
          "type": "string",
          "minLength": 1
        },
        "shortName": {
          "type": "string",
          "minLength": 1
        },
        "description": {
          "type": "string",
          "minLength": 1
        }
      },
      "required": [
        "name",
        "fullName",
        "shortName",
        "description"
      ]
    }
  },
  "required": [
    "application"
  ]
}